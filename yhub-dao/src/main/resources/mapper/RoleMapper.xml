<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.yhub.dao.RoleMapper" >

    <resultMap id="BaseRoleResultMap" type="com.yhub.entity.user.RoleDO" >
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="gmt_create" property="gmtCreate" jdbcType="TIMESTAMP"/>
        <result column="gmt_modified" property="gmtModified" jdbcType="TIMESTAMP"/>
        <result column="role_name" property="roleName" jdbcType="VARCHAR"/>
        <result column="role_sign" property="roleSign" jdbcType="VARCHAR"/>
        <result column="description" property="description" jdbcType="VARCHAR"/>
    </resultMap>

    <sql id="cols" >
        id,
        gmt_create,
        gmt_modified,
        role_name,
        role_sign,
        description
    </sql>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id" parameterType="com.yhub.entity.user.RoleDO" >
        insert into acc_role (
        gmt_create,
        gmt_modified,
        role_name,
        role_sign,
        description
        )
        values (
        now(),
        now(),
        #{roleName},
        #{roleSign},
        #{description}
        )
    </insert>

    <delete id="delete" parameterType="java.lang.Long" >
        delete from acc_role
        where id = #{id}
    </delete>

    <update id="update" parameterType="com.yhub.entity.user.RoleDO" >
        UPDATE acc_role
        SET gmt_modified = now()
        WHERE id = #{id}
    </update>

    <select id="selectById" resultMap="BaseRoleResultMap" parameterType="java.lang.Long" >
        select
        <include refid="cols" />
        from acc_role
        where id = #{id}
    </select>
</mapper>