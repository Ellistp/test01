<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.yhub.mapper.PermissionMapper" >

    <resultMap id="BasePermissionResultMap" type="com.yhub.entity.user.PermissionDO" >
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="gmt_create" property="gmtCreate" jdbcType="TIMESTAMP"/>
        <result column="gmt_modified" property="gmtModified" jdbcType="TIMESTAMP"/>
        <result column="permission_name" property="permissionName" jdbcType="VARCHAR"/>
        <result column="permission_sign" property="permissionSign" jdbcType="VARCHAR"/>
        <result column="description" property="description" jdbcType="VARCHAR"/>
    </resultMap>

    <sql id="cols" >
        id,
        gmt_create,
        gmt_modified,
        permission_name,
        permission_sign,
        description
    </sql>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id" parameterType="com.yhub.entity.user.PermissionDO" >
        insert into acc_permission (
        gmt_create,
        gmt_modified,
        permission_name,
        permission_sign,
        description
        )
        values (
        now(),
        now(),
        #{permissionName},
        #{permissionSign},
        #{description}
        )
    </insert>

    <delete id="delete" parameterType="java.lang.Long" >
        delete from acc_permission
        where id = #{id}
    </delete>

    <update id="update" parameterType="com.yhub.entity.user.PermissionDO" >
        UPDATE acc_permission
        SET gmt_modified = now()
        WHERE id = #{id}
    </update>

    <select id="selectById" resultMap="BasePermissionResultMap" parameterType="java.lang.Long" >
        select
        <include refid="cols" />
        from acc_permission
        where id = #{id}
    </select>
</mapper>